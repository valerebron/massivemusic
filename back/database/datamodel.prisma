type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  role: userRole!
  tracks: [Track!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  token: String
}

type Style {
  id: ID! @id
  name: String!
  slug: String!
}

type Track {
  id: ID! @id
  yt_id: String! @length(min: 11, max: 11)
  title:	String!	
  artist:	String!	
  duration:	Int!
  playcount:	Int! @default(value: 0)	
  invalid:	Boolean @default(value: false)
  style: Style!
  user: User!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

enum userRole {
  USER,
  ADMIN,
  ROBOT,
}
