// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type User {
  id: String @id
  name: String
  email: String @unique
  password: String
  role: userRole
  track: Track[]
  createdAt: DateTime
  updatedAt: DateTime
  token: String ?
}

type Style {
  id: String @id
  name: String
  slug: String
}

type Track {
  id: String @id
  yt_id: String @length(min: 11, max: 11)
  title:	String	
  artist:	String	
  duration:	Int
  playcount:	Int @default(value: 0)	
  invalid:	Boolean @default(value: false)
  style: Style
  user: User
  createdAt: DateTime
  updatedAt: DateTime
}

enum userRole {
  USER,
  ADMIN,
  ROBOT,
}
